{
  "compilerOptions": {
    /* Base Options: */
    "skipLibCheck": true,
    "target": "esnext",
    "allowJs": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    /* Strictness */
    "strict": true,
    "checkJs": true,
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    /* Bundled projects */
    "types": [
      "jest", // Keep jest here
      "node" // Add node types for Jest
    ],
    "noEmit": true,
    "module": "CommonJS", // Change to CommonJS
    "moduleResolution": "node", // Change to node
    "esModuleInterop": true,
    "jsx": "preserve", // Recommended for Next.js
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true,
    /* Path aliases */
    "paths": {
      "@/*": ["./app/*"],
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "*.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
